<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yxh.yixiuge.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:leftSrc="@mipmap/fanhuilv"
        app:titleText="电脑维修"></com.yxh.yixiuge.MyTopBar>

    <include
        layout="@layout/include_title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/repair_computer_ll_pinpai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌"
                    android:textColor="#bb000000"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="#00cccc" />

                <TextView
                    android:id="@+id/repair_computer_tv_pinpai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="联想"
                    android:textColor="#00cccc"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jinruhui" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repair_computer_ll_leixing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="#bb000000"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="#00cccc" />

                <TextView
                    android:id="@+id/repair_computer_tv_leixing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="笔记本"
                    android:textColor="#00cccc"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jinruhui" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repair_computer_ll_xinghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="型号"
                    android:textColor="#bb000000"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="#00cccc" />

                <TextView
                    android:id="@+id/repair_computer_tv_xinghao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Y460A-ITH"
                    android:textColor="#00cccc"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jinruhui" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/repair_computer_ll_guzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障"
                    android:textColor="#bb000000"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="#00cccc" />

                <TextView
                    android:id="@+id/repair_computer_tv_guzhang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="主板"
                    android:textColor="#00cccc"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jinruhui" />
            </LinearLayout>

            <EditText
                android:id="@+id/repair_computer_et_guzhangmiaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:hint="请对您的手机故障进行简单的描述"
                android:padding="20dp"
                android:text="开机进不去系统，黑屏白字"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:padding="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/repair_computer_rv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <Button
                android:id="@+id/repair_computer_bt_queren"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/u134"
                android:text="确认"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
