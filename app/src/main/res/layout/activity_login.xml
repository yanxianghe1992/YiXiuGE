<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/u2544"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@mipmap/u2550" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="一修哥"
        android:textColor="#ffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_et_tel"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#8fd4cc"
        android:paddingLeft="10dp"
        android:text="请输入手机号"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_et_pwd"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#8fd4cc"
        android:paddingLeft="10dp"
        android:text="请输入密码"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_bt_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@mipmap/u2556"
        android:text="登录"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login_tv_fgpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="忘记密码"
            android:textColor="#ffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>